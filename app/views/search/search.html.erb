<% page_title(@page_title) %>

<div class="container">
  <div class="row">
    <div class="col">
      <% if @search_type == "adv" %>
        <%# advanced search form template %>
        <%= render 'advanced_search_form' %>
      <% else %>
        <%# keyword search form template %>
        <%= render 'keyword_search_form' %>
      <% end %>
    </div>
  </div>

  <div class="row" id="search-results">
    <div class="row">
      <% if @search_type == "adv" %>
        <%# advanced search results template %>
        <%= render 'advanced_search_results' %>
      <% else %>
        <%# keyword search results template %>
        <%= render 'keyword_search_results' %>
      <% end %>
      <script src="/js/public-js.js"></script>
    </div>
  </div>
</div>

<script>
    $(document).ready(function() {
        // toggle more/fewer facets
        $("li.toggle-link button").on('click', function(){
            var $this = $(this);

            var aria_expanded = $this.attr('aria-expanded');

            if (aria_expanded === "false") {
                $this.attr('aria-expanded', "true");
                $this.find(".toggle-label").text("fewer");
            } else {
                $this.attr('aria-expanded', "false");
                $this.find(".toggle-label").text("all");
            }

            $this.parents("ul.facet-list-group").find("ul.toggle-ul").slideToggle();
        });
    });
</script>