<h2>Recent Searches</h2>
<p>This page lists searches performed this session. Search history is ephemeral and is deleted when you close your browser.</p>
<div class="row">
  <div class="pagination-stuff col-md-10">
    <%= paginate @searches %>
  </div>
</div>
<table class="table table-striped table-hover">
  <thead>
  <th class="num-header"></th>
  <th class="query-header">Query</th>
  <th class="type-header">Type</th>
  <th class="date-header">Last performed</th>
  </thead>
  <% i = (@searches.current_page - 1) * @searches.limit_value + 1 %>
  <% @searches.each do |search| %>
    <tr>
      <td><%= i  %></td>
      <td><%= link_to(search.display, search_index_path(search.query_string)) %></td>
      <td><%= search.type %></td>
      <td><%= search.time %> UTC</td>
    </tr>
    <% i = i + 1 %>
  <% end %>
</table>