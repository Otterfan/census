<% page_title 'Browse volumes' %>
<h3>Browse all Volumes</h3>

<div class="row">
  <div class="pagination-stuff col-md-12">
    <%= alphabetical_paginate @alpha_params %>
  </div>
</div>

<div class="row">
  <div id="pagination_table" class="col-md-12">
    <ul class="list-group">
      <% @volumes.each do |volume| %>
        <li class="list-group-item">
          <%= link_to (volume.title.blank? ? "[No title]" : volume.title), public_volume_path(volume) %>
        </li>
      <% end %>
    </ul>

  </div>
</div>