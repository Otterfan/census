<div class="authors-nav__letter-list">

  <%# Display all letters in the navigation list %>
  <% all_letters = ('A'..'Z').to_a %>
  <% all_letters.each do |letter| %>
  <span class="authors-nav__letter <%= 'authors-nav__letter--selected' if letter == @first_letter %>">

    <%# Only show links for letters that have content. Otherwise show
    normal text. %>
    <% if @nav_letters.include?(letter) %>
      <a href="/public/authors/letter/<%= letter %>"><%= letter %></a>
    <% else %>
      <%= letter %>
    <% end %>

  </span>
  <% end %>
</div>