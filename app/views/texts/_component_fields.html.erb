<li class='component-fields nested-fields list-group-item row sortable-item'>
  <%= link_to_remove_association "x", f, {:class => 'remove-link'} %>
  <div class="show-when-collapsed">
    <div class="col-sm-1 handle collapsed-handle"></div>
    <div class="col-sm-11 collapsed-display">
      <%= f.object.title %> <%= f.object.pages %>
    </div>
  </div>
  <div class="component-collapsable collapse in">
    <div class="col-sm-12">
      <%= f.input :title, as: :string %>
      <%= f.input :greek_source_title, as: :string %>
      <%= f.input :pages, as: :string %>
      <%= f.input :genre, as: :string %>
      <%= f.input :text_type, as: :string %>
      <%= f.input :is_bilingual, label: "Text is bilingual" %>
      <%= f.input :collection, as: :string %>
      <%= f.input :note %>
      <%= f.hidden_field :ordinal, as: :string, class: 'ordinal-num' %>
    </div>
    <div id='component-citations'>
      <%= f.simple_fields_for :component_citations do |citation| %>
          <%= render 'component_citation_fields', :f => citation %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association 'add citation', f, :component_citations %>
      </div>
    </div>
  </div>
</li>
