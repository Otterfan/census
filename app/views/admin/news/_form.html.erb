<%= simple_form_for(@admin_news) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :brief_content %>
    <%= f.input :content %>
    <%= f.input :note %>
    <%= f.input :posted_on %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
