<div class="row">
  <div class="pagination-stuff col-md-10">
    <%= paginate @admin_news %>
  </div>
  <div class="new-thing col-md-2">
    <%= link_to '<button class="btn btn-defaul btn-success">+ Add a News piece</button>'.html_safe, new_admin_news_path %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <% @admin_news.each do |news| %>
        <li class="list-group-item">
          <%= link_to news.brief_content, edit_admin_news_path(news) %>
          <%= link_to admin_news_path(news), method: :delete, data: {confirm: 'Are you sure?'} do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </li>
      <% end %>
    </ul>
    <%= paginate @admin_news %>
  </div>
</div>

