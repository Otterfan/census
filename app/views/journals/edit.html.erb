<h1>Editing Journal</h1>

<div class="col-md-7">
<%= render 'form', journal: @journal %>
</div>
<div class="col-md-5">
  <h2>Appears in...</h2>
  <% @texts.each do |text| %>
      <li><%= link_to text.title, edit_text_path(text) %></li>
  <% end %>
  <%= render partial: 'shared/changes', locals: {versions: @journal.versions} %>
</div>